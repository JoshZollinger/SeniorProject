                </StackLayout>
                <StackLayout Style="{StaticResource NormalStackLayout}">
                    <Label Text="Hole 10" WidthRequest="39" HorizontalOptions="Start" VerticalOptions="Center" BackgroundColor="green"/>
                    <customEntry:MyEntry TabIndex="10" Style="{StaticResource MyEntry}" Completed="MyEntry_Completed"/>
                </StackLayout>
                <StackLayout Style="{StaticResource NormalStackLayout}">
                    <Label Text="Hole 11" WidthRequest="39" HorizontalOptions="Start" VerticalOptions="Center"/>
