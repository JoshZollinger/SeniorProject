                </StackLayout>
                <StackLayout Style="{StaticResource NormalStackLayout}">
                    <Label Text="Hole 18" WidthRequest="39" HorizontalOptions="Start" VerticalOptions="Center"/>
                    <customEntry:MyEntry TabIndex="18" Style="{StaticResource MyEntry}" Completed="MyEntry_Completed"/>
                </StackLayout>
              </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    

</ContentPage>



